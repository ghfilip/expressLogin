<div class="form-header">
    <% if (Object.keys(errors).length === 0) { %>
        <h2>Login Page</h2>
    <% } else { %>
        <h2 class="errors-heading">Oops, please correct the following:</h2>
        <ul class="errors-list">
            <% Object.values(errors).forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
</div>
<form method="post" action="/login" novalidate>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="form-field <%= errors.email ? 'form-field-invalid' : '' %>">
        <label for="message">Email</label>
        <input class="input" id="email" name="email" type="email" autofocus value="<%= data.email %>" />
        <% if (errors.email) { %>
            <div class="error"><%= errors.email.msg %></div>
        <% } %>
    </div>
    <div class="form-field">
        <label for="email">Pass</label>
        <input class="input" id="pass" name="pass" type="password" value="<%= data.pass %>" />
        <% if (errors.pass) { %>
            <div class="error"><%= errors.pass.msg %></div>
        <% } %>
    </div>
    <div class="form-actions">
        <button class="btn" type="submit">Login</button>
    </div>
</form>